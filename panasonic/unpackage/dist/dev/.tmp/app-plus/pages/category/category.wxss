  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
      -ms-flex-direction: row;
          flex-direction: row;
  padding-top: 45rpx;
  margin: 0 20rpx;
}
.nav-right-item {
  width: 168rpx;
  margin: 25rpx 5rpx;
  text-align: center;
  font-size: 16rpx;
  height: 164rpx;
}
.nav-right-item image {
  width: 168rpx;
  height: 126.5rpx;
  margin-bottom: 10rpx;
  will-change: transform;
}

