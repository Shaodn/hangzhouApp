page {
  background: #FFFFFF;
  /* height: 100%; */
}
.main-title {
  border-bottom: solid 1px #E0E0E0;
  text-align: center;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}
.page-body {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.nav-left {
  width: 175rpx;
  background: #f2f2f2;
}
.nav-left-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
      -ms-flex-pack: center;
          justify-content: center;
  width: 100%;
  height: 72rpx;
  font-size: 16rpx;
  color: #000000;
  position: relative;
}
.nav-left-item.active {
    /* color: $base-color; */
    background: #ffffff;
}
.nav-left-item.active:before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      -webkit-transform: translateY(-50%);
          -ms-transform: translateY(-50%);
              transform: translateY(-50%);
      height: 20rpx;
      width: 6rpx;
      background-color: #006B69;
      /* border-radius: 0 4px 4px 0; */
      opacity: .8;
}
.nav-right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  overflow: hidden;
  /* padding-top: 65upx; */
}
.nav-right-list {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-wrap: wrap;
      -ms-flex-wrap: wrap;
          flex-wrap: wrap;
  background: #fff;
  /* justify-content: ; */
